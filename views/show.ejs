<%- include ("partials/header") %>

<div class="ui main text container segment" id="new">
    <div class="ui huge header"><%= blog.title%></div>
    <div class="ui top attached">
        <img class="ui centered rounded image" src="<%= blog.image %>" alt="">
    </div>
    <div class="content">
        <span><%= blog.created.toDateString() %></span>
    </div>
    <div class="description">
        <p><%- blog.body %></p>
    </div>
    <a href="/blogs/<%= blog._id %>/edit" class="ui orange basic button">EDIT</a>
    <form action="/blogs/<%= blog._id %>?_method=DELETE" id="delete" method="POST">
        <button class="ui red basic button">DELETE</button>
    </form>
</div>

<%- include ("partials/footer") %>